{
    "name": "ed2_2",
    "n_gpu": 1,
    "arch": {
        "type": "ED2",
        "args": {
            "unet_kwargs": {
                "num_bins": 5,
                "skip_type": "sum",
                "recurrent_block_type": "convgru",
                "num_encoders": 3,
                "base_num_channels": 16,
                "num_residual_blocks": 2,
                "kernel_size": 3,
                "use_upsample_conv": true,
                "final_activation": "",
                "norm": "none",
                "ckpt_aolp": "./ckpt_ecl/aolp_Autoencoder.pth",
                "ckpt_dolp": "./ckpt_ecl/dolp_Autoencoder.pth"
            }
        }
    },
    "data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "./data/movingcam/train_iad_selected.txt",
            "batch_size": 4,
            "shuffle": true,
            "num_workers": 16,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 40,
                "dataset_type": "DynamicH5Dataset_v2e_p",
                "proba_pause_when_running": 0.05,
                "proba_pause_when_paused": 0.9,
                "normalize_image": true,
                "noise_kwargs": {
                    "noise_std": 0.1,
                    "noise_fraction": 1.0
                },
                "hot_pixel_kwargs": {
                    "hot_pixel_std": 0.1,
                    "max_hot_pixel_fraction": 0.001
                },
                "dataset_kwargs": {
                    "transforms": {
                        "RandomCrop": {
                            "size": 112,
                            "preserve_mosaicing_pattern": true
                        }
                    },
                    "num_bins": 5,
                    "sensor_resolution": [480, 640],
                    "combined_voxel_channels": true
                }
            }
        }
    },
    "valid_data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "./data/movingcam/test_iad_selected.txt",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 16,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 320,
                "dataset_type": "DynamicH5Dataset_v2e_p",
                "normalize_image": true,
                "dataset_kwargs": {
                    "max_length": 320,
                    "transforms": {
                        "CenterCrop": {
                            "size": 160,
                            "preserve_mosaicing_pattern": true
                        }
                    },
                    "num_bins": 5,
                    "sensor_resolution": [480, 640],
                    "combined_voxel_channels": true
                }
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss_ftns": {
        "perceptual_loss": {
            "weight": 1.0,
            "net": "vgg"
        },
        "l2_loss": {
            "weight": 10.0
        },
        "ssim_loss": {
            "weight": 1.0
        },
        "ec_loss": {
            "weight": 0.1
        }
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 25,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 60,
        "save_dir": "./ckpt",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min loss",
        "num_previews": 4,
        "val_num_previews": 8,
        "tensorboard": true
    }
}