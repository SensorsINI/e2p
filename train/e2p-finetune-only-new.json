{
    "name": "e2p",
    "n_gpu": 1,
    "arch": {
        "type": "V16",
        "args": {
            "unet_kwargs": {
                "num_bins": 5,
                "base_num_channels": 32,
                "kernel_size": 3
            }
        }
    },
    "data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "./data/E2PD/train-finetune.txt",
            "batch_size": 8,
            "shuffle": true,
            "num_workers": 16,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 30,
                "dataset_type": "DynamicH5Dataset_v2e_p",
                "proba_pause_when_running": 0.05,
                "proba_pause_when_paused": 0.9,
                "normalize_image": false,
                "noise_kwargs": {
                    "noise_std": 0.1,
                    "noise_fraction": 1.0
                },
                "hot_pixel_kwargs": {
                    "hot_pixel_std": 0.1,
                    "max_hot_pixel_fraction": 0.001
                },
                "dataset_kwargs": {
                    "transforms": {
                        "RandomCrop": {
                            "size": 112,
                            "preserve_mosaicing_pattern": true
                        }
                    },
                    "num_bins": 5,
                    "combined_voxel_channels": true
                }
            }
        }
    },
    "valid_data_loader": {
        "type": "HDF5DataLoader",
        "args": {
            "data_file": "./data/E2PD/test.txt",
            "batch_size": 4,
            "shuffle": false,
            "num_workers": 16,
            "pin_memory": true,
            "sequence_kwargs": {
                "sequence_length": 160,
                "dataset_type": "DynamicH5Dataset_v2e_p",
                "normalize_image": false,
                "dataset_kwargs": {
                    "transforms": {
                        "CenterCrop": {
                            "size": 112,
                            "preserve_mosaicing_pattern": true
                        }
                    },
                    "num_bins": 5,
                    "combined_voxel_channels": true
                }
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss_ftns": {
        "perceptual_loss": {
            "weight": 1.0,
            "net": "vgg"
        },
        "mse_loss": {
            "weight": 50.0
        },
        "ssim_loss": {
            "weight": 1.0
        }
    },
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [50, 70],
            "gamma": 0.3
        }
    },
    "trainer": {
        "epochs": 90,
        "save_dir": "./ckpt",
        "save_period": 2,
        "verbosity": 2,
        "monitor": "min loss",
        "num_previews": 4,
        "val_num_previews": 8,
        "tensorboard": true
    }
}
